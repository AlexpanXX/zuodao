<div class="my-content account-address">
  <div class="container">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
      <div class="card">
        <div class="card-header card-header-icon" data-background-color="blue">
          <i class="material-icons">place</i>
        </div>
        <h4 class="card-title">收货信息</h4>
        <div class="card-content">
          <%= simple_form_for [:account, @address] do |f| %>
            <div class="form-inputs">
              <%= f.input :label, label: "标签", placeholder: "如：公司、家", autofocus: true %>
              <%= f.input :name, label: "收货人" %>
              <%= f.input :cellphone, label: "手机号" %>
              <%= f.input :address, label: "详细地址" %>
            </div>
            <div class="form-actions">
              <%= f.submit "保存", data: {disable_with: "正在保存..."}, class: "btn btn-raised btn-white" %>
              <%= f.submit "保存并设为默认", data: {disable_with: "正在保存..."}, class: "btn btn-raised btn-info" %>
              <%= link_to :back, class: "btn btn-white pull-right" do %>
                <i class="material-icons">keyboard_arrow_left</i>返回
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
