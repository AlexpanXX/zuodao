<div class="my-content product-list">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <% if @products.empty? %>
          <%= render "products/empty" %>
        <% else %>
          <%= render partial: "products/product", collection: @products, as: :product %>
        <% end %>
      </div>
    </div>
  </div>
</div>
