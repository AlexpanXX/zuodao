<% if current_user && current_user.favorited?(product) %>
  <%= link_to dislikes_account_favorite_path(product), method: :post, remote: true,
  :"data-toggle" => "tooltip", title: "取消收藏", class: "btn btn-raised btn-just-icon btn-round btn-danger" do %>
    <%= mi.favorite %>
  <% end %>
<% else %>
  <%= link_to favorite_account_favorite_path(product), method: :post, remote: true,
  :"data-toggle" => "tooltip", title: "加入收藏", class: "btn btn-raised btn-just-icon btn-round btn-default" do %>
    <%= mi.favorite %>
  <% end %>
<% end %>
