<% if current_user && current_user.favorited?(product) %>
  <%= link_to dislikes_account_favorite_path(product), method: :post, remote: true,
  :"data-toggle" => "tooltip", title: "取消收藏", class: "card-favorites btn btn-round btn-raised btn-xs btn-danger" do %>
    <%= mi.favorite %> <%= product.favorites_count %>
  <% end %>
<% else %>
  <%= link_to favorite_account_favorite_path(product), method: :post, remote: true,
  :"data-toggle" => "tooltip", title: "加入收藏", class: "card-favorites btn btn-round btn-raised btn-xs btn-default" do %>
    <%= mi.favorite %> <%= product.favorites_count %>
  <% end %>
<% end %>
